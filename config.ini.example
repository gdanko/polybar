[colors]
background = #282A2E
background-alt = #373B41
foreground = #C5C8C6
primary = #F0C674
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/gdanko]
width = 100%
height = 16pt
radius = 6

; dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3pt

border-size = 4pt
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 1

separator = |
separator-foreground = ${colors.disabled}

; Install nerd fonts like this
; https://gist.github.com/davidteren/898f2dcccd42d9f8680ec69a3a5d350e
; font-N = <fontconfig pattern>;<vertical offset>

; You will need to download Arimo Nerd Font
; https://github.com/googlefonts/Arimo

font-0 = "Roboto:size=11;1"
font-1 = "Tamsyn:pixelsize=12;0"
font-2 = "Noto Sans:size=11;1"
font-3 = "Arimo Nerd Font:size=14;2"

modules-left = 
modules-right = filesystem-root filesystem-work memory cpu network-throughput wlan weather-san-diego stocks-goog stocks-now

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

; https://github.com/polybar/polybar/wiki/Configuration

[module/systray]
type = internal/tray

format-margin = 8pt
tray-spacing = 16pt

[filesystem-base]
type = custom/script
interval = 25

[module/filesystem-root]
inherit = filesystem-base
env-mountpoint = "/"
exec = ~/.config/polybar/scripts/disk-usage.py --mountpoint "$mountpoint"

[module/filesystem-work]
inherit = filesystem-base
env-mountpoint = "/work"
exec = ~/.config/polybar/scripts/disk-usage.py --mountpoint "$mountpoint"

[module/memory]
type = custom/script
interval = 2
exec = ~/.config/polybar/scripts/memory-usage.py

[module/cpu]
type = custom/script
interval = 2
exec = ~/.config/polybar/scripts/cpu-usage.py

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected

[module/network-throughput]
inherit = network-base
interval = 2
interface-type = wireless
label-connected = %{F#F0C674}%ifname%%{F-} %downspeed% RX / %upspeed% TX

[module/wlan]
type = custom/script
interval = 2
exec = ~/.config/polybar/scripts/wifi-status.py --interface wlo1

[weather-base]
type = custom/script
interval = 900 ; 15m
env-api_key = "<your_weather_api_key>"

[module/weather-san-diego]
inherit = weather-base
env-location = "San Diego, CA, US"
exec = ~/.config/polybar/scripts/weather.py --api-key "$api_key" --location "$location"

[stocks-base]
type = custom/script
interval = 900 ; 15m

[module/stocks-goog]
inherit = stocks-base
env-symbol = "GOOG"
exec = ~/.config/polybar/scripts/stock-quotes.py --symbol "$symbol"

[module/stocks-now]
inherit = stocks-base
env-symbol = "NOW"
exec = ~/.config/polybar/scripts/stock-quotes.py --symbol "$symbol"

[settings]
screenchange-reload = true
pseudo-transparency = true

; vim:ft=dosini